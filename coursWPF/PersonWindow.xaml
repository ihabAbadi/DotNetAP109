<Window x:Class="coursWPF.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:coursWPF"
        mc:Ignorable="d"
        Title="Ajouter une personne" Height="226" Width="515">
    <Grid>
        <Label Content="Nom : " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="29" Width="109"/>
        <TextBox x:Name="firstNameTextBox" HorizontalAlignment="Left" Margin="142,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="360" Height="29"/>
        <Label Content="Prénom : " HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Height="29" Width="109"/>
        <TextBox x:Name="lastNameTextBox" HorizontalAlignment="Left" Margin="142,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="360" Height="29"/>
        <Button x:Name="confirmButton" Content="Valider" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Height="31" Width="492"/>
        <TextBlock x:Name="resultTextBlock" HorizontalAlignment="Left" Margin="15,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
