<Window x:Class="PenduWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenduWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <GroupBox Header="Ajouter un mot">
            <StackPanel Orientation="Horizontal" >
                <Label Content="Mot : " HorizontalAlignment="Left"  />
                <TextBox x:Name="motTextBox" Width="400" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" />
                <Button Click="ClickAjouterMot" Content="Valider" Width="344" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Jeu">
            <StackPanel >
                
                <Button Click="ClickJouer" Content="Jouer"></Button>
                <TextBlock TextAlignment="Center" FontSize="20" Text="Nombre Essai : " x:Name="nbEssaiTextBlock"></TextBlock>
                <TextBlock  TextAlignment="Center" FontSize="40" x:Name="masqueTextBlock"></TextBlock>
                <WrapPanel Orientation="Horizontal" x:Name="boutonsLettres">
                    
                </WrapPanel>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
